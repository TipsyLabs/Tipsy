contract TipsySale is Owned {
    using SafeMath for uint256;
    
    address BUSD = 0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56;
    address TIPSY = 0x68c4D87BBf94379d6c94466Cf3AD70d53603FD1E;
    uint256 tokenRatePerBUSD = 10; // 0.10BUSD = 1 TIPSY OR 1BUSD = 10 TIPSY
    
    event TokenPurchased(address by, uint256 _busdSent, uint256 _tipsyReceived);
    
    // ------------------------------------------------------------------------
    // Constructor
    // ------------------------------------------------------------------------
    constructor() public {
        owner = 0x9c01eF205F5F87adBb1419Ec52E396d08Bf7b8C4;
    }
    
    // the contract doesn't accepts BNBs
    receive() external payable{
        revert();
    }
    
    // use this function to buy Tipsy tokens
    // _busdAmount sent must include the necessary decimal places
    // this needs the TIPSY inside sale contract to work fine
    function purchaseToken(uint256 _busdAmount) external {
        require(_busdAmount > 0 , "Invalid amount");
        require(IBEP20(BUSD).transferFrom(msg.sender, owner, _busdAmount), "Error receiving BUSDs");
        require(IBEP20(TIPSY).transfer(msg.sender, _calculateTokens(_busdAmount)), "Error sending TIPSY");
        emit TokenPurchased(msg.sender, _busdAmount, _calculateTokens(_busdAmount));
    }
    
    function _calculateTokens(uint256 _busdAmount) private view returns(uint256 _tokens){
        return _busdAmount.mul(tokenRatePerBUSD);
    }
    
    function getUnSoldTokens() external onlyOwner{
        // all remaining tokens will be sent back to owner
        IBEP20(TIPSY).transfer(owner, IBEP20(TIPSY).balanceOf(address(this)));
    }
}
